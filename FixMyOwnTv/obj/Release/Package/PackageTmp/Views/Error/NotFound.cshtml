@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/HomePage_Default.css" />
    <script type="text/javascript" src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <style type="text/css">
        #ArticleContainer h4 {
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Container -->
    <div class="container">
        <!-- Header -->
        <div class="row">
            <div id="Logo">
                <div class="span8">
                    <img alt="FixMyOwnTV.com" src="../../Images/Text/Logo3.gif" style="margin-top: 10px;" />
                    <h5 style="color: #008080;">Learn - get what you need - do it yourself!</h5>
                </div>
            </div>
        </div>
        <!-- End Header -->
        <!-- Nav bar -->
        <!-- End Nav bar -->
        <!-- Main Page -->
        <div id="mainContent">
            <div id="mobileLeftAd" style="float: left; position: relative; top: 10px; margin-right:20px;">
            </div>
            <div class="dynamic-width" style="float:left; text-align:justify;">
                <div id="ArticleContainer">
                    <br /><br />
                    <h4>The page does not exist, or the request is invalid.</h4>
                    <h4>Error 404</h4>
                    <br />
                </div>
                <!-- Footer -->
                <div class="text-center" style="margin-bottom:20px;">
                    <div id="footerStyle" style="font-family: Arial; font-size: 0.8em; text-align: center;">
                        <br />
                        &copy; @DateTime.Today.Year myTvTestPatterns-com
                        <img alt="USA" src="../../Images/Graphics/UnitedStates.bmp" style="margin-right:10px; margin-left:10px;" />
                        www.FixMyOwnTV.com <br /><br />
                    </div>
                    <br /><br />
                    <!-- End Footer -->
                </div>
            </div>
            <!-- Right column -->
            <div id="rightColumnLarge" style="margin-left: 20px; position: relative; top: 10px;">
            </div>
            <!-- End Right column -->
        </div>
        <!-- End Container -->
    </div>
</body>
</html>